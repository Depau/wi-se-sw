{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "lib": [
      "dom",
      "es5",
      "es2015.promise"
    ],
    "allowJs": true,
    "jsx": "react",
    "jsxFactory": "h",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts"
  ]
}
